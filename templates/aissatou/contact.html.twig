{% extends 'base2.html.twig' %}
{% block title %}contact{% endblock %}
 {% block body %} 
 <div class="container">

 <h1 class="brand"><span>N'ayez plus de doutes</span></h1>

 <div class="wrapper">

     <!-- COMPANY INFORMATION -->
     <div class="company-info">
         <h3>Ndeye Aissatou Ndao</h3>

         <ul>
             <li><i class="fa fa-road"></i> Rue de Fontenille</li>
             <li><i class="fa fa-phone"></i> +33 6 66 55 44 88 </li>
             <li><i class="fa fa-envelope"></i> aissatou2003@gmail.com</li>
         </ul>
     </div>
     <!-- End .company-info -->

     <!-- CONTACT FORM -->
     <div class="contact">
         <h3>Contactez-moi</h3>

         <form id="contact-form">

             <p>
                 <label>Nom</label>
                 <input type="text" name="name" id="name" required>
             </p>

             <p>
                 <label>Prénom</label>
                 <input type="text" name="company" id="company">
             </p>

             <p>
                 <label>Adresse mail</label>
                 <input type="email" name="email" id="email" required>
             </p>

             <p>
                 <label>Numéro de téléphone</label>
                 <input type="text" name="phone" id="phone">
             </p>

             <p class="full">
                 <label>Message</label>
                 <textarea name="message" rows="5" id="message"></textarea>
             </p>

             <p class="full">
                 <button type="envoyer">Envoyer</button>
             </p>

         </form>
         <!-- End #contact-form -->
     </div>
     <!-- End .contact -->

 </div>
 <!-- End .wrapper -->
</div>
<!-- End .container -->
{% endblock %}